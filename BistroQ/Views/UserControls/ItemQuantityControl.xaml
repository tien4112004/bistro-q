<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BistroQ.Views.UserControls.ItemQuantityControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BistroQ.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="RootPanel" 
                Padding="4,0"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="QuantityStates">
                <VisualState x:Name="NotInCart">
                    <VisualState.Setters>
                        <Setter Target="AddButton.Visibility" Value="Visible" />
                        <Setter Target="QuantityPanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="InCart">
                    <VisualState.Setters>
                        <Setter Target="AddButton.Visibility" Value="Collapsed" />
                        <Setter Target="QuantityPanel.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Button x:Name="AddButton"
                x:Uid="AddItemButton"
                Style="{StaticResource AccentButtonStyle}" />

        <Grid x:Name="QuantityPanel"
              Margin="0,4,0,0"
              HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="DecreaseButton"                     
                    Style="{StaticResource AccentButtonStyle}"
                    Width="32" Padding="2,4"
                    HorizontalAlignment="Left"
                    Command="{x:Bind DecreaseQuantityCommand}"
                    Grid.Column="0">
                <FontIcon Glyph="&#xE949;" FontSize="14" />
            </Button>

            <TextBlock x:Name="QuantityText" 
                      Width="36" 
                      FontSize="18"
                      Text="{x:Bind Item.Quantity, Mode=OneWay}"
                      HorizontalTextAlignment="Center" 
                      VerticalAlignment="Center"
                      Grid.Column="1" />

            <Button x:Name="IncreaseButton" 
                    Width="32" Padding="2,4"
                    Style="{StaticResource AccentButtonStyle}"
                    Command="{x:Bind IncreaseQuantityCommand}"
                    Grid.Column="2">
                <FontIcon Glyph="&#xE948;" FontSize="14" />
            </Button>

            <Button x:Name="DeleteButton"
                    Background="{StaticResource SystemFillColorCritical}"
                    Width="32" Padding="4,4"
                    Command="{x:Bind RemoveFromCartCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Right"
                    Grid.Column="3">
                <FontIcon Glyph="&#xE74D;" FontSize="14" />
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
