<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BistroQ.Views.UserControls.PaginationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BistroQ.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="16">
        <StackPanel Orientation="Horizontal" Margin="0,0,40,0">
            <TextBlock Text="Rows per page" 
                  Margin="0,0,8,0" 
                  VerticalAlignment="Center" />
            <ComboBox x:Name="RowsPerPageSelection" 
                  SelectionChanged="RowsPerPageSelection_SelectionChanged" 
                  Width="72" 
                  SelectedIndex="0"
                  VerticalAlignment="Center"
                  SelectedItem="{x:Bind Pagination.PageSize, Mode=OneWay}">
                <ComboBoxItem Content="10" />
                <ComboBoxItem Content="20" />
                <ComboBoxItem Content="50" />
                <ComboBoxItem Content="100" />
            </ComboBox>
        </StackPanel>
        <TextBlock Margin="0,0,0,0" VerticalAlignment="Center">
        <Run Text="Page " />
        <Run Text="{x:Bind Pagination.CurrentPage, Mode=OneWay}" />
        <Run Text=" / " />
        <Run Text="{x:Bind Pagination.TotalPages, Mode=OneWay}" />
        </TextBlock>
        <Button Content="&lt;&lt;" Click="FirstPageButton_Click" Margin="24,0,0,0" VerticalAlignment="Center"/>
        <Button Content="&lt;" Click="PreviousButton_Click" Margin="8,0,8,0" VerticalAlignment="Center"/>
        <TextBox Width="52" Text="{x:Bind Pagination.CurrentPage, Mode=TwoWay}" VerticalAlignment="Center"/>
        <Button Content=">" Click="NextButton_Click" Margin="8,0,8,0" VerticalAlignment="Center"/>
        <Button Content=">>" Click="LastPageButton_Click" Margin="0,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
